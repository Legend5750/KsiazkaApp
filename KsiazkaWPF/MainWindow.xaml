<Window x:Class="KsiazkaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KsiazkaWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="Tytuł: " HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0,10,0,0"/>
            <StackPanel Height="320" VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="button1" Content="&lt;&lt;&lt;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,140,0,0" FontSize="20" Padding="5,5,5,5"/>
                <Border BorderBrush="Black" BorderThickness="1" Width="300" Margin="10,0,10,0" CornerRadius="5,5,5,5" Padding="5">
                    <TextBox x:Name="textBox1" TextWrapping="Wrap" Text=""/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" Width="300" Margin="10,0,10,0" CornerRadius="5,5,5,5" Padding="5">
                    <TextBox x:Name="textBox2" TextWrapping="Wrap" Text=""/>
                </Border>
                <Button x:Name="button2" Content=">>>" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,140,0,0" FontSize="20" Padding="5,5,5,5"/>
                
            </StackPanel>
            <TextBlock x:Name="textBlock2" TextWrapping="Wrap" Text="Strony: " HorizontalAlignment="Center" FontSize="20" Margin="0,10,0,0"/>
        </StackPanel>
        


    </Grid>
</Window>
